<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D69A6D"
    tools:context=".Exercises">

    <!-- Horizontal Layout for Title and Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button"
            android:padding="8dp"
            android:src="@drawable/back_button"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/exercises"
            android:textColor="#F000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Jogging Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/jogging_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFEB3B"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openJoggingtype">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/jogging_image"
                android:contentDescription="@string/jogging" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Jogging"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Yoga Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/yoga_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFC107"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openYogaType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/yoga_image"
                android:contentDescription="@string/yoga" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Yoga"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Breathing Exercises Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/breathing_exercises_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openBreathingExercisesType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/breathingexercise_image"
                android:contentDescription="@string/breathing_exercises" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Breathing Exercises"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Meditation Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/meditation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FF5722"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openMeditationType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/meditation_image"
                android:contentDescription="@string/meditation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Meditation"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bodyweight Squats Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bodyweight_squats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#E91E63"
        app:cardCornerRadius="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openBodyweightSquatsType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bodyweightsquats_image"
                android:contentDescription="@string/bodyweightsquats" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="25dp"
                android:text="Bodyweight Squats"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>