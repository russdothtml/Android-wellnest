<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D69A6D"
    android:padding="16dp"
    tools:context=".Yogatype">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button"
                android:padding="8dp"
                android:src="@drawable/back_button"
                tools:ignore="ImageContrastCheck,RedundantDescriptionCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/yoga"
                android:textColor="#F000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Hatha Yoga Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
           >

            <ImageView
                android:id="@+id/imageHathaYoga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/hathayoga_image"
                android:contentDescription="@string/hatha_yoga" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/typeHathaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hathayoga_head"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionHathaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hathayoga_introduction"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Vinyasa Yoga Section -->
    </LinearLayout>
</ScrollView>