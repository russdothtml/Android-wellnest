<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Yoga"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Yoga Type Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageHathaYoga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hatha_yoga_image" <!-- Replace with your image -->
            android:contentDescription="Hatha Yoga" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeHathaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hatha Yoga"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionHathaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hatha Yoga emphasizes physical postures and breath control."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat for other yoga types -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageVinyasaYoga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vinyasa_yoga_image" <!-- Replace with your image -->
            android:contentDescription="Vinyasa Yoga" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeVinyasaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vinyasa Yoga"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionVinyasaYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vinyasa Yoga focuses on flow and transitions between postures."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional types can be added similarly -->

    </LinearLayout>
</ScrollView>