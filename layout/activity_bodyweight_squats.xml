<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Bodyweight Squats"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bodyweight Squat Type Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageStandardSquat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/standard_squat_image" <!-- Replace with your image -->
            android:contentDescription="Standard Squat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeStandardSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard Squat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionStandardSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A standard squat involves bending your knees while keeping your back straight."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat for other squat variations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageJumpSquat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jump_squat_image" <!-- Replace with your image -->
            android:contentDescription="Jump Squat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeJumpSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump Squat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionJumpSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump squats involve performing a squat followed by a jump."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional types can be added similarly -->

    </LinearLayout>
</ScrollView>