<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D69A6D"
    android:padding="16dp"
    tools:context=".bodyweight_squats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Bodyweight Squats"
                android:textColor="#F000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Standard Squat Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openStandardSquat">

            <ImageView
                android:id="@+id/imageStandardSquat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="2sp"
                android:src="@drawable/standard_squat_image"
                android:contentDescription="Standard_Squat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeStandardSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard Squat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionStandardSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="A standard squat involves bending your knees while keeping your back straight."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Jump Squat Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openJumpSquat">

            <ImageView
                android:id="@+id/imageJumpSquat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="1dp"
                android:src="@drawable/jump_squat_image"
                android:contentDescription="Jump Squat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeJumpSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump Squat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionJumpSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump squats involve performing a squat followed by a jump."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Pistol Squat Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPistolSquat">

            <ImageView
                android:id="@+id/imagePistolSquat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pistol_squat_image"
                android:contentDescription="Pistol Squat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typePistolSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pistol Squat"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionPistolSquat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The pistol squat is a demanding single-leg exercise that involves squatting while extending the opposite leg forward."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>