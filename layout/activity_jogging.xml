<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Horizontal Layout for Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
            android:contentDescription="@string/back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/jogging"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Jogging Type Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageJogging"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jogging_image" <!-- Replace with your jogging image -->
            android:contentDescription="Jogging Type" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeJogging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road Jogging"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionJogging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road jogging involves running on paved roads, often in urban areas."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat for other jogging types -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageTrailJogging"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/trail_jogging_image" <!-- Replace with your trail jogging image -->
            android:contentDescription="Trail Jogging" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeTrailJogging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trail Jogging"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionTrailJogging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trail jogging is done on natural terrain, such as dirt paths and forest trails."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional jogging types can be added here -->

    </LinearLayout>
</ScrollView>