<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Meditation"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Meditation Type Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageMindfulnessMeditation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mindfulness_meditation_image" <!-- Replace with your image -->
            android:contentDescription="Mindfulness Meditation" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeMindfulnessMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness Meditation"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionMindfulnessMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mindfulness meditation focuses on being present and aware."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat for other meditation types -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageTranscendentalMeditation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/transcendental_meditation_image" <!-- Replace with your image -->
            android:contentDescription="Transcendental Meditation" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeTranscendentalMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcendental Meditation"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionTranscendentalMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcendental meditation involves silently repeating a mantra."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional types can be added similarly -->

    </LinearLayout>
</ScrollView>