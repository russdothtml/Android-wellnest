<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D69A6D"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Horizontal Layout for Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Breathing Exercises"
                android:textColor="#F000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Diaphragmatic Breathing Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openDiaphragmaticBreathing">

            <ImageView
                android:id="@+id/imageDiaphragmaticBreathing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/diaphragmatic_breathing_image"
                android:contentDescription="Diaphragmatic Breathing" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeDiaphragmaticBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaphragmatic Breathing"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionDiaphragmaticBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaphragmatic breathing involves breathing deeply into the diaphragm."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Box Breathing Section -->
        <LinearLayout
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openBoxBreathing">

            <ImageView
                android:id="@+id/imageBoxBreathing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/box_breathing_image"
                android:contentDescription="Box Breathing" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeBoxBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box Breathing"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionBoxBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box breathing involves inhaling, holding, exhaling, and holding again."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Breathing Types -->
        <!-- Add more breathing exercise sections here, following the same structure. -->

    </LinearLayout>
</ScrollView>