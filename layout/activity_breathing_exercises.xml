<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:contentDescription="@string/back_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="15dp"
                android:text="Breathing Exercises"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Breathing Exercise Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageDiaphragmaticBreathing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/diaphragmatic_breathing_image" <!-- Replace with your image -->
            android:contentDescription="Diaphragmatic Breathing" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeDiaphragmaticBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaphragmatic Breathing"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionDiaphragmaticBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaphragmatic breathing involves breathing deeply into the diaphragm."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repeat for other breathing exercises -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imageBoxBreathing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/box_breathing_image" <!-- Replace with your image -->
            android:contentDescription="Box Breathing" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/typeBoxBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box Breathing"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionBoxBreathing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box breathing involves inhaling, holding, exhaling, and holding again."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional types can be added similarly -->

    </LinearLayout>
</ScrollView>